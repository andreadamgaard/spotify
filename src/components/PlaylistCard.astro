<style>
article{
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 5%;
    background: #181818;
	border-radius: 10px;
    color: white;
    transition: background 0.3s ease;
    object-fit: cover;
    width: 170px;
    height: 300px;
}
article:hover {
    background-color: #242424;
}
h3 {
    margin-bottom: 0;

}
h3 a {
color: inherit;
}

p {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    font-size: 0.9rem;
}
figure {
    display: grid;
    grid: "stack";
    place-items: start;
    order: -1;
    margin-bottom: 1rem;
    color: white;
      translate: -38% 0%;

}
figure > * {
    grid-area: stack;
}
img {
    box-shadow: 0 8px 24px hsl(0 0% 0% / 50%);
    border-radius: 5px;

}

.play-btn {
    place-self: end;
    display: inline-grid;
    place-content: center;
    background-color: #64D56E;
    color: #121212;
    border-radius: 1000px;
    inline-size: 3rem;
    block-size: 3rem;
    margin: 0.5rem;
    box-shadow: 0 8px 8px rgb(0 0 0 / 30%);
    transition: 0.3s;
    isolation: isolate;
}
  .play-btn:not(article:hover *) {
    translate: 0 0.375rem;
    opacity: 0;
  }
   .play-btn:hover {
    background: #1fdf64;
    scale: 1.04;
  }

  .play-btn svg {
    width: var(--space-lg);
    height: var(--space-lg);
  }

  svg {
    width: 0.75rem;
    height: 0.75rem;
    margin:  0.375rem;
    display: block;
  }
</style>