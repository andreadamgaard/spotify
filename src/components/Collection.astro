---
const { title } = Astro.props;
---

<section>
    <header>
        <h2>
            <a href="#0">{title}</a>
        </h2>
        <a href="#0">Show all</a>
    </header>
    <ul class="grid-container">
        <slot />
    </ul>
</section>

<style>
    section {
        display: grid;
        grid-auto-rows: min-content;
        gap: 1%;
        margin-bottom: 3%;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin: -1% 0%;
	    padding: 0;
    }

    header > a {
        font-size: 0.87rem;
        font-weight: 500;
        color: #A7A7A7;
    }

    a:hover{
        text-decoration: underline;
    }

    .grid-container{
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(175px, 1fr));
        grid-template-rows: min-content;
        grid-auto-rows: 0;
        gap: 0;
        overflow: clip;
        margin: 0% 2% 0% 2%;
	    padding: 0;
    }

</style>