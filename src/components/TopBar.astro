---
import Button from "./Button.astro";
---

<header class="topbar">
    <menu>
        <button disabled>
        <li>
            <svg role="img" height="16" width="16" aria-hidden="true" class="Svg-sc-ytk21e-0 kcBZLg IYDlXmBmmUKHveMzIPCF" viewBox="0 0 16 16" data-encore-id="icon" xmlns="http://www.w3.org/2000/svg"><path d="M11.03.47a.75.75 0 0 1 0 1.06L4.56 8l6.47 6.47a.75.75 0 1 1-1.06 1.06L2.44 8 9.97.47a.75.75 0 0 1 1.06 0z"></path></svg>
        </li>
        </button>
        <button disabled>
        <li>
            <svg role="img" height="16" width="16" aria-hidden="true" class="Svg-sc-ytk21e-0 kcBZLg IYDlXmBmmUKHveMzIPCF" viewBox="0 0 16 16" data-encore-id="icon" xmlns="http://www.w3.org/2000/svg"><path d="M4.97.47a.75.75 0 0 0 0 1.06L11.44 8l-6.47 6.47a.75.75 0 1 0 1.06 1.06L13.56 8 6.03.47a.75.75 0 0 0-1.06 0z"></path></svg>
        </li>
        </button>
    </menu>
    <div class="button-group">
        <Button variant="black2" size="medium">Sign up</Button>
        <Button variant="white" size="medium">Log in</Button>
    </div>
</header>


<style>
.topbar {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    align-items: center;
    background: #101010;
    color: white;
    padding: 1rem 2rem;
    height: 1.5rem;
    border-radius: 5px;
    position: sticky;
  }

menu {
    display: flex;
    gap: 1rem;
    list-style: none;
}

menu button {
    display: grid;
    place-content: center;
    width: 1rem;
    height: 1rem;
    border-radius: 1000px;
    background: black;
    color: white;
  }

button svg {
    width: 1rem;
    height: 1rem;
}

menu button[disabled] {
    cursor: not-allowed;
    opacity: 0.6;
} 
svg{
    fill: white;
}

.button-group {
    display: flex;
    padding: 0% 1% 0% 0%;
    gap: 1rem;
}
</style>